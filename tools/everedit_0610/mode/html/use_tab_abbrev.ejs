var ini = App.GetIniFile(SCRIPT_PATH+"\\config.ini");
var cfg=ini.Get("Emmet", "UseTab");
var MB_OKCANCEL=1;
var MB_ICONQUESTION=0x20;
var key="Emmet:UseTab";

var msg="";
var val="";
if( cfg=="N" ){
	if( App.Lang==2052 )
		msg="该功能当前是关闭状态,您期望使用该功能吗?";
	else
		msg="Do you want to enable this function?";
	val="Y";
}
else{
	if( App.Lang==2052 )
		msg="该功能当前是开启状态,您期望关闭该功能吗?";
	else
		msg="Do you want to disable this function?";
	val="N";
}

if( App.ShowMsgBox(msg, "Emmet", MB_OKCANCEL|MB_ICONQUESTION)==1 ){
	ini.Put("Emmet", "UseTab", val);
	App.SetValue(key, val);
	App.Alert(App.Lang==2052?"变更完毕!":"Saved your settings!")
}